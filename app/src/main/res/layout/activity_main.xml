<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/excerciseTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@color/neonone"
            android:clickable="false"
            android:cursorVisible="false"
            android:fontFamily="@font/gugi_regular"
            android:gravity="center"
            android:text="@string/active"
            android:inputType="number"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/restTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@color/neontwo"
            android:clickable="false"
            android:cursorVisible="false"
            android:fontFamily="@font/gugi_regular"
            android:gravity="center"
            android:text="@string/rest"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/laps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/neonthree"
            android:clickable="false"
            android:cursorVisible="false"
            android:fontFamily="@font/gugi_regular"
            android:gravity="center"
            android:text="@string/laps"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="80sp" />

        <Button
            android:id="@+id/goButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/neonfour"
            android:fontFamily="@font/gugi_regular"
            android:text="GO!"
            android:textSize="120sp"
            tools:text="GO" />

    </LinearLayout>

    <include
        android:id="@+id/onboardinng"
        layout="@layout/onboarding"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>